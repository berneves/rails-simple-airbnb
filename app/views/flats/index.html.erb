<h1>Those are all the flats</h1>


<% @flats.each do |flat| %>
    <div class = flex>
     <p> <strong> Name: <%= flat.name %> </strong></p>
     <p> Address: <%= flat.address %> </p>
     <p> Price Per Night: <%= flat.price_per_night %> </p>
     <p> <%= link_to "More info about the flat", flat_path(flat) %> </p>
    </div>
    <% end %>

<h2> <%= link_to "Add a new flat", new_flat_path %> </h2>

